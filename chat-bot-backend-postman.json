{
  "info": {
    "name": "RAG Chat Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/actuator/health",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "actuator",
            "health"
          ]
        }
      }
    },
    {
      "name": "Create Session",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "dev-key-123"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"My first session\",\n  \"userId\": \"asaify\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/v1/sessions",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "v1",
            "sessions"
          ]
        }
      }
    },
    {
      "name": "Upsert Knowledge",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "dev-key-123"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Quarterly revenue grew 12% YoY.\",\n  \"source\": \"Q2-report.pdf\",\n  \"metadata\": {\n    \"quarter\": \"Q2\",\n    \"year\": 2025\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/v1/knowledge/upsert",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "v1",
            "knowledge",
            "upsert"
          ]
        }
      }
    },
    {
      "name": "Add User Message + Generate Assistant Reply",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "x-api-key",
            "value": "dev-key-123"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"sender\": \"user\",\n  \"content\": \"What was our revenue growth?\",\n  \"generate\": true,\n  \"userId\": \"asaify\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/v1/sessions/{{SESSION_ID}}/messages",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "v1",
            "sessions",
            "{{SESSION_ID}}",
            "messages"
          ]
        }
      }
    },
    {
      "name": "Get Chat Messages",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-api-key",
            "value": "dev-key-123"
          }
        ],
        "url": {
          "raw": "http://localhost:8080/v1/sessions/{{SESSION_ID}}/messages?page=0&size=50",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8080",
          "path": [
            "v1",
            "sessions",
            "{{SESSION_ID}}",
            "messages"
          ],
          "query": [
            {
              "key": "page",
              "value": "0"
            },
            {
              "key": "size",
              "value": "50"
            }
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "SESSION_ID",
      "value": "replace-with-your-session-id"
    }
  ]
}